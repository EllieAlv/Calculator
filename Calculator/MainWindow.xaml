<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350">
    <Grid Margin="10,9,10,11">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="resultLabel" Content="0"
               Grid.ColumnSpan="4"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"/>
        <Button x:Name="ACButton"
                Style="{StaticResource otherButtons}"
                Content="AC"
                Grid.Row="1"/>
        <Button x:Name="NegativeButton"
                Style="{StaticResource otherButtons}"
                Content="+/-"                
                Grid.Row="1"
                Grid.Column="1"/>
        <Button x:Name="PercentageButton"
                Style="{StaticResource otherButtons}"
                Content="%"                
                Grid.Row="1"
                Grid.Column="2"/>
        <Button x:Name="DivisionButton"
                Click="OperatorButton_Click"
                Style="{StaticResource operatorButtonSyle}"
                Content="/"                
                Grid.Row="1"
                Grid.Column="3"/>
        <Button x:Name="Num7Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="7"                
                Grid.Row="2"/>
        <Button x:Name="Num8Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="8"                
                Grid.Row="2"
                Grid.Column="1"/>
        <Button x:Name="Num9Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="9"                
                Grid.Row="2"
                Grid.Column="2"/>
        <Button x:Name="MultiplicationButton"
                Click="OperatorButton_Click"
                Style="{StaticResource operatorButtonSyle}"
                Content="*"                
                Grid.Row="2"
                Grid.Column="3"/>
        <Button x:Name="Num4Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="4"                
                Grid.Row="3"/>
        <Button x:Name="Num5Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="5"                
                Grid.Row="3"
                Grid.Column="1"/>
        <Button x:Name="Num6Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="6"                
                Grid.Row="3"
                Grid.Column="2"/>
        <Button x:Name="MinusButton"
                Click="OperatorButton_Click"
                Style="{StaticResource operatorButtonSyle}"
                Content="-"                
                Grid.Row="3"
                Grid.Column="3"/>
        <Button x:Name="Num1Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="1"                
                Grid.Row="4"/>
        <Button x:Name="Num2Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="2"                
                Grid.Row="4"
                Grid.Column="1"/>
        <Button x:Name="Num3Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="3"                
                Grid.Row="4"
                Grid.Column="2"/>
        <Button x:Name="PlusButton"
                Click="OperatorButton_Click"
                Style="{StaticResource operatorButtonSyle}"
                Content="+"                
                Grid.Row="4"
                Grid.Column="3"/>
        <Button x:Name="Num0Button"
                Click="NumberButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="0"                
                Grid.ColumnSpan="2"
                Grid.Row="5"/>
        <Button x:Name="DecimalButton"
                Click="DecimalButton_Click"
                Style="{StaticResource numberButtonSyle}"
                Content="."                
                Grid.Row="5"
                Grid.Column="2"/>
        <Button x:Name="EqualsButton"
                Style="{StaticResource operatorButtonSyle}"
                Content="="                
                Grid.Row="5"
                Grid.Column="3"/>
    </Grid>
</Window>
